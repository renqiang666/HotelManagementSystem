jdbc.driverClassName=com.mysql.jdbc.Driver
jdbc.url=jdbc\:mysql\://localhost\:3306/hotelsystem?characterEncoding\=utf-8
jdbc.username=root
jdbc.password=root
##############
###C3P0连接池配置
#初始化连接数量
jdbc.initialPoolSize=20
#最小连接数量
jdbc.minPoolSize=25
#最大连接数量
jdbc.maxPoolSize=150
#当连接池用完之后一次性获取的连接数量
jdbc.acquireIncrement=5
#根据一定的时间间隔检查连接池的连接数量 单位为秒
jdbc.idleConnectionTestPeriod=60
#最大空闲时间 单位为秒
jdbc.maxIdleTime=120
#最大的maxStatements连接数量
jdbc.maxStatements=1000
#最大语句缓存
jdbc.maxStatementsPerConnection=100